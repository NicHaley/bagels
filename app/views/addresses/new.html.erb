<h1>Address</h1>

<%= form_for([@order, @address]) do |f| %>

	<div class="field form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field form-group">
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>

	<div class="field form-group">
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div class="field form-group">
		<%= f.label :province %>
		<%= f.text_field :province %>
	</div>

	<div class="field form-group">
		<%= f.label :postal %>
		<%= f.text_field :postal %>
	</div>

	<div class="field form-group">
		<%= f.label :country %>
		<%= f.text_field :country %>
	</div>

	<div class="actions form-group">
		<%= f.submit %>
	</div>

<% end %>